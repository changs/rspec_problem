<%= form_tag(signup_path) do %>
<div class="field">
  <%= label_tag(:fullname, "Full name") %>
  <%= text_field_tag(:fullname) %>
</div>
<div class="field">
  <%= label_tag(:email, "Email") %>
  <%= text_field_tag(:email) %>
</div>
<div class="field">
  <%= label_tag(:password, "Password") %>
  <%= password_field_tag(:password) %>
</div>
<div class="actions">
  <%= submit_tag("Sign up") %>
</div>
<% end %>
